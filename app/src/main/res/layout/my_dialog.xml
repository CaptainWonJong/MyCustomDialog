<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_24"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_32"
                android:layout_marginLeft="@dimen/dimen_24"
                android:layout_marginRight="@dimen/dimen_24"
                android:layout_marginTop="@dimen/dimen_24"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_common_dialog_top_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_64"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:adjustViewBounds="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_common_dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_common_dialog_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14"
                    android:letterSpacing="-0.07"
                    android:lineSpacingExtra="@dimen/dimen_6"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_common_dialog_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/cb_common_dialog_checkbox"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:background="@drawable/selector_login_checkbox"
                        android:button="@null"
                        android:checked="true" />

                    <TextView
                        android:id="@+id/tv_common_dialog_checkbox_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:gravity="center"
                        android:letterSpacing="-0.07"
                        android:textColor="#1a1a1a"
                        android:textSize="@dimen/dimen_14" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_common_dialog_sub"
                    android:background="@drawable/selector_sub_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginLeft="@dimen/dimen_24"
                    android:layout_marginRight="@dimen/dimen_24"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="#666666"
                    android:letterSpacing="-0.06"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="#e9e9e9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_56"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_common_dialog_left"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16"
                android:visibility="gone"/>

            <View
                android:id="@+id/v_common_dialog_bottom_boundary_line"
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="#e9e9e9"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_common_dialog_right"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#5467d1"
                android:textSize="@dimen/dimen_16"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>